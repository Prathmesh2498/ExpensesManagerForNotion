<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:autoLink="web"
                android:text="Watch a video explaining how to get v2 token and url here. \n https://www.youtube.com/watch?v=wO22a8P1aFI"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/V2tokenuse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:lineSpacingExtra="8sp"
                android:paddingLeft="10dp"
                android:paddingTop="15dp"
                android:text="\tWhy should I submit my v2 token? \n The library this app uses is called notion-py\n\twhich a freely available library on pypi.org.\n To connect to your notion account, you need \n\tto add your v2 token.\n You can read about it more here- \n\tpypi.org/projects/notion"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="15dp"
                android:text="\tHow can I obtain the v2 token?\n Please see the image below."
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="582dp"
                android:paddingTop="20dp"
                app:srcCompat="@drawable/v1" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/v2" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="484dp"
                app:srcCompat="@drawable/v3" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select v2 and copy the string in Contents section."
                android:textSize="18sp" />

            <TextView
                android:id="@+id/dbURL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="22dp"
                android:text="\tHow do get the database url?\n To get the database URL\n\n 1. Login to your Notion account\n 2. Open the database that you want to update.\n 3. Copy paste the whole link by double \n\tclicking on the address bar of the browser.\n"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/blogs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:paddingLeft="10dp"
                android:paddingTop="15dp"
                android:text="You can read more about this project on my blog:\n\n https://medium.com/@prathu10/automating-notion-using-notion-py-fa0f2e8f089e\n\n https://medium.com/@prathu10/android-app-for-notion-automation-using-chaquopy-863e72fa4ecd\n\n"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>